<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <h1>Url Shortner</h1>
    <div>
        <% if (locals.id) { %>
            <p> URL generated : http://localhost:3000/url<%= locals.id %> </p>
        <% } %>
        
        <% if (locals.error) { %>
            <p style="color: red">
                <%= locals.error %>
            </p>
        <% } %>
        
        <form method="POST" action="/url">
            <label for="">Enter the correct URL</label>
            <input type="text" name="url" placeholder="https://www.example.com" />
            <button type="submit">Generate</button>
        </form>
    </div>
    
    <div>
        <% if (locals.urls && locals.urls.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Sr. no</th>
                        <th>Short id</th>
                        <th>Redirect</th>
                        <th>Visit History</th>
                    </tr>
                </thead>
                <tbody>
                    <% locals.urls.forEach((url, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= url.shortId %></td>
                            <td><%= url.redirectURL %></td>
                            <td><%= url.visitHistory.length %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>

</html>